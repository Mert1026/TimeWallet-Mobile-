<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeWallet_Mobile_.NewPage1"
             Title="NewPage1">

    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Grid ColumnDefinitions="*,*" Padding="10">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                    <Label Text="Budgeted" FontAttributes="Bold" FontSize="16" />
                    <Label x:Name="SummaryBudgeted" FontSize="24" FontAttributes="Bold" />
                    <Label Text="Current Balance" FontSize="12" />
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                    <Label Text="Spent" FontAttributes="Bold" FontSize="16" />
                    <Label x:Name="SummarySpent" FontSize="24" FontAttributes="Bold" />
                    <Label Text="Current Balance" FontSize="12" />
                </VerticalStackLayout>
            </Grid>

            <ScrollView>
                <FlexLayout x:Name="BudgetLayout" Wrap="Wrap" JustifyContent="Center" />
            </ScrollView>

            <Button x:Name="LOGIN" Clicked="LOGIN_Clicked" Text="Login"/>

        </VerticalStackLayout>
    </ScrollView>

    
    
    

    
</ContentPage>