<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeWallet_Mobile_.AddBudgetPage"
             Title="AddBudgetPage"
             BackgroundColor="#e1f2d9">
   
    <Grid Padding="30"
        VerticalOptions="Center"
        HorizontalOptions="Center">

        <!-- Budget Card -->
        <Frame BackgroundColor="#e0f2d8"
        CornerRadius="10"
        Padding="20"
        Margin="0"
        WidthRequest="320"
        HasShadow="True"
        VerticalOptions="Center"
        HorizontalOptions="Center">
            <Frame.Shadow>
                <Shadow Brush="Black"
                Opacity="0.5"
                Offset="10,10"
                Radius="10"/>
            </Frame.Shadow>

            <StackLayout Spacing="25">

                <!-- Name -->
                <Label x:Name="MainText" Text="Add Budget" FontSize="35" FontAttributes="Bold" 
                HorizontalOptions="Center" TextColor="Black"/>

                <StackLayout Spacing="15">

                    <!-- Name Input -->
                    <StackLayout>
                        <Label x:Name="NameLabel" Text="Name" FontSize="16" TextColor="Black"/>
                        <Entry x:Name="txtName" Placeholder="Name"
                        Keyboard="Text" BackgroundColor="#F7F7F7"
                        TextColor="Black"/>
                    </StackLayout>

                    <!-- Amount Input -->
                    <StackLayout>
                        <Label x:Name="AmountLabel" Text="Amount" FontSize="16" TextColor="Black"/>
                        <Entry x:Name="txtAmount" Placeholder="Amount" BackgroundColor="#F7F7F7"
                        TextColor="Black"/>
                    </StackLayout>

                    <!-- Add Button -->
                    <Button x:Name="MainButtonLabel"
                    Text="Add"
                    BackgroundColor="#0F4D36"
                    TextColor="#e0f2d8"
                    FontSize="18"
                    CornerRadius="8"
                    Clicked="MainButtonLabel_Clicked"/>

                </StackLayout>

            </StackLayout>
        </Frame>

        <!-- Result Text -->
        <StackLayout Orientation="Horizontal"
         HorizontalOptions="Center">
            <Label x:Name="txtResult"
       Text=""
       FontSize="21"
       TextDecorations="Underline"
       TextColor="#0a5d40"/>
        </StackLayout>

    </Grid>
</ContentPage>