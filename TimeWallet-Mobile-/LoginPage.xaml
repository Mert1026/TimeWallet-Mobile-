<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeWallet_Mobile_.LoginPage"
             Title="LoginPage"
             BackgroundColor="#e0f2d8">
    <Grid Padding="30"
      VerticalOptions="Center"
      HorizontalOptions="Center">

        

        <!-- Login Card -->
        <Frame BackgroundColor="#e0f2d8"
           CornerRadius="10"
           Padding="20"
           Margin="0"
           WidthRequest="320"
           HasShadow="True"
           VerticalOptions="Center"
           HorizontalOptions="Center">

            <StackLayout Spacing="25">

                <Button Clicked="Button_Clicked">

                </Button>

                <!-- Title -->
                <Label x:Name="MainTextLabel" Text="Login" FontSize="35" FontAttributes="Bold" 
                   HorizontalOptions="Center" TextColor="Black"/>

                <StackLayout Spacing="15">


                    <!-- Email Input -->
                    <StackLayout>
                        <Label x:Name="EmailLabel" Text="Email" FontSize="16" TextColor="Black"/>
                        <Entry x:Name="txtEmail" Placeholder="Email"
                        Keyboard="Email" BackgroundColor="#F7F7F7"
                        TextColor="Black"/>
                    </StackLayout>

                    <!-- Password Input -->
                    <StackLayout>
                        <Label x:Name="PasswordLabel" Text="Password" FontSize="16" TextColor="Black"/>
                        <Entry x:Name="txtPassword" Placeholder="Password"
                        IsPassword="True" BackgroundColor="#F7F7F7"
                        TextColor="Black"/>
                    </StackLayout>

                    <!-- Remember Password Checkbox -->
                    <StackLayout Orientation="Horizontal">
                        <CheckBox x:Name="RememberMeCheckBox"/>
                        <Label x:Name="RememberMeLabel" Text="Remember me?" FontSize="14"
                        VerticalOptions="Center" TextColor="#0a5d40"/>
                    </StackLayout>


                    <!-- Login Button -->
                    <Button x:Name="MainButtonLabel"
                        Text="Login"
                        BackgroundColor="#0F4D36"
                        TextColor="#e0f2d8"
                        FontSize="18"
                        CornerRadius="8"
                        Clicked="OnLoginClicked"/>

                    <!-- Register Navigation -->
                    <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center">
                        <Label x:Name="RegisterNavigationLabel" Text="Don't have an account? Click here."
                           FontSize="12"
                           TextDecorations="Underline"
                           TextColor="#0a5d40">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnRegisterTapped"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>

                </StackLayout>

            </StackLayout>
        </Frame>

        <!-- Result Text -->
        <StackLayout Orientation="Horizontal"
                 HorizontalOptions="Center">
            <Label x:Name="txtResult"
               Text=""
               FontSize="21"
               TextDecorations="Underline"
               TextColor="#0a5d40"/>
        </StackLayout>

    </Grid>

</ContentPage>