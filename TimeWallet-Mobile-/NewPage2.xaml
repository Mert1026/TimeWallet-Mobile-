<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimeWallet_Mobile_.NewPage2"
             Title="NewPage2"
             BackgroundColor="#e1f3d8">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Frame x:Name="zoomFrame" BackgroundColor="Grey" WidthRequest="305" HorizontalOptions="Center" CornerRadius="50">
                <VerticalStackLayout>
                    <HorizontalStackLayout Padding="0">
                        <Frame x:Name="levelOne_frame" BackgroundColor="Green" HeightRequest="5" WidthRequest="50" Margin="3"></Frame>
                        <Frame x:Name="levelTwo_frame" BackgroundColor="Green" HeightRequest="5" WidthRequest="50" Margin="3"></Frame>
                        <Frame x:Name="levelThree_frame" BackgroundColor="Green" HeightRequest="5" WidthRequest="50" Margin="3"></Frame>
                        <Button x:Name="plus_Clicked" Text="+" HeightRequest="40" WidthRequest="40" FontSize="30" Padding="0" CornerRadius="40" Margin="5" Clicked="plusBtn_Clicked"></Button>
                        <Button x:Name="minus_Clicked" Text="-" HeightRequest="40" WidthRequest="40" FontSize="30" Padding="0" CornerRadius="40" Margin="5" VerticalOptions="Center" HorizontalOptions="Center" Clicked="minusBtn_Clicked"></Button>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
            <Grid ColumnDefinitions="*,*" Padding="10">
                <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" >
                    <Label x:Name="budgeted_Sign" Text="Budgeted" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center"/>
                    <Label x:Name="SummaryBudgeted" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center"/>
                    <Label x:Name="currentBalance_Sign_1" Text="Current Balance" FontSize="12" TextColor="Black" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                    <Label x:Name="spent_Sign" Text="Spent" FontAttributes="Bold" FontSize="16" TextColor="Black" HorizontalTextAlignment="Center" />
                    <Label x:Name="SummarySpent" FontSize="24" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="Center" />
                    <Label x:Name="currentBalance_Sign_2" Text="Current Balance" FontSize="12" TextColor="Black" HorizontalTextAlignment="Center" />
                </VerticalStackLayout>

            </Grid>

            <ScrollView>
                <FlexLayout x:Name="BudgetLayout" Wrap="Wrap" JustifyContent="Center" />
            </ScrollView>
            <Button x:Name="LOGIN" Clicked="LOGIN_Clicked" Text="Login"/>

            <Frame
    x:Name="budgetFrame"
    WidthRequest="250"
    BorderColor="DarkGreen"
    Padding="10"
    CornerRadius="10"
    BackgroundColor="#e1f3d8"
    HeightRequest="180"
    Margin="10">

                <VerticalStackLayout WidthRequest="250">
                    <Label
            Text="BIG"
            FontAttributes="Bold"
            FontSize="30"
            HorizontalOptions="Center"
            TextColor="#0a5d40" />

                    <Label
            Text="US$TEST.OO Budgeted"
            FontSize="14"
            HorizontalOptions="Center"
            TextColor="#0a5d40" />

                    <ProgressBar
            Progress="0.5"
            HeightRequest="5"
            BackgroundColor="#c5e7b3"
            ProgressColor="#0a5d40" />

                    <Label
            Text="TEST"
            FontSize="20"
            HorizontalOptions="Center"
            TextColor="#0a5d40" />

                    <Button
            Text="View Details"
                        HeightRequest="50"
                        WidthRequest="230"
                        Margin="10"
            FontSize="23"
            BackgroundColor="#0a5d40"
            TextColor="White" />
                </VerticalStackLayout>
            </Frame>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>